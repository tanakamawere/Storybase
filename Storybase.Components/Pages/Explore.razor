@page "/"
@page "/home"

@inject IApiRepository apiRepository
@inject NavigationManager navManager


<MudContainer Class="cards-section" Style="background-color:white">

    <MudProgressCircular Color="Color.Default" Indeterminate="true" Class="@(isBusy ? "d-block" : "d-none")" />

    <MudGrid Class="mt-8">
        @foreach (var book in books)
        {
            <MudItem xs="12" sm="6" md="3" Class="@(isBusy ? "d-none" : "d-block")">
                <MudCard @onclick="() => GoToBookDetails(book.Id)">
                    <MudCardMedia Image="@book.CoverImageUrl" Title="@book.Title" />
                    <MudCardContent>
                        <MudText Typo="Typo.h5">@book.Title</MudText>
                        <MudText Typo="Typo.h6">@book.Writer.Name</MudText>
                    </MudCardContent>
                </MudCard>
            </MudItem>
        }
    </MudGrid>
</MudContainer>




@code {
    //List of books
    IEnumerable<Book> books { get; set; } = Enumerable.Empty<Book>();

    bool isBusy = false;

    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();
        await LoadBooks();
    }

    private async Task LoadBooks()
    {
        isBusy = true;
        books = await apiRepository.GetBooksAsync();
        isBusy = false;
    }

    //Go to book details page
    private void GoToBookDetails(int id)
    {
        navManager.NavigateTo($"/bookdetails/{id}");
    }
}