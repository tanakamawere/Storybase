<?xml version="1.0" encoding="utf-8" ?>
<Border
    x:Class="StorybaseMobile.Templates.ProfileButtonTemplate"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:fa="clr-namespace:UraniumUI.Icons.FontAwesome;assembly=UraniumUI.Icons.FontAwesome"
    x:Name="profileButton"
    Stroke="Transparent">
    <Grid Padding="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Image Grid.Column="0" HeightRequest="20">
            <Image.Source>
                <FontImageSource
                    x:Name="profileButtonIcon"
                    FontFamily="FASolid"
                    Color="{AppThemeBinding Light={StaticResource Primary},
                                            Dark={StaticResource White}}" />
            </Image.Source>
        </Image>
        <Label
            x:Name="profileButtonLabel"
            Grid.Column="1"
            FontSize="22"
            Text="Become a writer"
            VerticalOptions="Center" />
    </Grid>
</Border>
